{
  "name": "AWS Simple Console",
  "short_name": "AWS Simple Console",
  "version": "0.8.2",
  "manifest_version": 2,
  "description": "Amazon offers a breathtaking 50+ services through their AWS Console. This extension will allow you to hide the ones you do not use.",
  "homepage_url": "https://confkit.com/",
  "icons": {
    "16": "src/images/icon-16.png",
    "32": "src/images/icon-32.png",
    "48": "src/images/icon-48.png",
    "128": "src/images/icon-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "https://console.aws.amazon.com/*",
    "https://*.console.aws.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://console.aws.amazon.com/*",
        "https://*.console.aws.amazon.com/*"
      ],
      "js": [
        "src/js/zepto.min.js",
        "src/js/utils.js",
        "src/js/extension.js"
      ]
    }
  ]
}
